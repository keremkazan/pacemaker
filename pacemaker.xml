<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.1//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_2.dtd'>
<nta>
	<declaration>// heartMode values:
//  0 - RANDOM
//  1 - MANUAL
//  2 - TEST
int heartMode = 0;
// paceMode values:
//  0 - NORMAL
//  1 - SLEEP
//  2 - EXERCISE
//  3 - MANUAL
int paceMode = 0;
broadcast chan AS, VS, AP, VP;

// Pacemaker Variables

clock cAVI;
clock cRI;

// V Upper Bound
int LRI[4] = {2000,
              1500,
              600,
              2000};
// V Lower Bound
int URI[4] = {1000,
              600,
              343,
              343};
// A/V Lower Bound
int AVI_min = 30;
int AVI_max = 100;


// Keyboard Stuff
int keyValue = 0;
broadcast chan KeyPressed;</declaration>
	<template>
		<name>Keyboard</name>
		<location id="id0" x="-178" y="-34">
		</location>
		<location id="id1" x="-365" y="-34">
		</location>
		<init ref="id1"/>
		<transition>
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="synchronisation" x="-306" y="34">KeyPressed</label>
			<nail x="-178" y="51"/>
			<nail x="-365" y="51"/>
		</transition>
		<transition>
			<source ref="id1"/>
			<target ref="id0"/>
			<nail x="-365" y="-110"/>
			<nail x="-178" y="-110"/>
		</transition>
	</template>
	<template>
		<name>Pacemaker</name>
		<location id="id2" x="25" y="-255">
		</location>
		<location id="id3" x="25" y="68">
			<label kind="invariant" x="76" y="25">cRI &lt;= LRI[paceMode] &amp;&amp;
cAVI &lt;= AVI_max</label>
		</location>
		<init ref="id3"/>
		<transition>
			<source ref="id3"/>
			<target ref="id3"/>
			<label kind="guard" x="-323" y="76">cRI &gt;= LRI[paceMode] &amp;&amp; 
cAVI &gt;= AVI_max</label>
			<label kind="synchronisation" x="-178" y="186">VP!</label>
			<label kind="assignment" x="-382" y="135">cRI = 0,
cAVI = 0</label>
			<nail x="17" y="203"/>
			<nail x="-391" y="204"/>
			<nail x="-391" y="68"/>
			<nail x="-18" y="68"/>
		</transition>
		<transition>
			<source ref="id3"/>
			<target ref="id3"/>
			<label kind="synchronisation" x="-178" y="-85">AP!</label>
			<nail x="17" y="-68"/>
			<nail x="-391" y="-67"/>
			<nail x="-391" y="68"/>
		</transition>
		<transition>
			<source ref="id3"/>
			<target ref="id3"/>
			<label kind="guard" x="42" y="119">cRI &gt; URI[paceMode]</label>
			<label kind="synchronisation" x="119" y="186">VS?</label>
			<label kind="assignment" x="255" y="119">cRI = 0</label>
			<nail x="34" y="203"/>
			<nail x="340" y="203"/>
			<nail x="340" y="68"/>
		</transition>
		<transition>
			<source ref="id3"/>
			<target ref="id3"/>
			<label kind="synchronisation" x="43" y="-84">AS?</label>
			<nail x="34" y="-68"/>
			<nail x="340" y="-68"/>
			<nail x="340" y="68"/>
		</transition>
	</template>
	<template>
		<name x="5" y="5">Heart</name>
		<location id="id4" x="323" y="93">
		</location>
		<init ref="id4"/>
		<transition>
			<source ref="id4"/>
			<target ref="id4"/>
			<label kind="guard" x="187" y="144">heartMode == 0</label>
			<label kind="synchronisation" x="179" y="212">VS!</label>
			<nail x="297" y="229"/>
			<nail x="34" y="229"/>
			<nail x="34" y="93"/>
			<nail x="280" y="93"/>
		</transition>
		<transition>
			<source ref="id4"/>
			<target ref="id4"/>
			<label kind="guard" x="187" y="0">heartMode == 0</label>
			<label kind="synchronisation" x="179" y="-59">AS!</label>
			<nail x="306" y="-42"/>
			<nail x="34" y="-42"/>
			<nail x="34" y="93"/>
		</transition>
		<transition>
			<source ref="id4"/>
			<target ref="id4"/>
			<label kind="synchronisation" x="341" y="212">VP?</label>
			<nail x="323" y="229"/>
			<nail x="442" y="229"/>
		</transition>
		<transition>
			<source ref="id4"/>
			<target ref="id4"/>
			<label kind="synchronisation" x="341" y="-59">AP?</label>
			<nail x="323" y="-42"/>
			<nail x="459" y="-42"/>
		</transition>
	</template>
	<system>// Place template instantiations here.
P = Pacemaker();
H = Heart();
K = Keyboard();
// List one or more processes to be composed into a system.
system P, H, K;
    </system>
	<queries>
	</queries>
</nta>
